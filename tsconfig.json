{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "strict": true                             /* Skip type checking all .d.ts files. */
  },
  "include": ["src","src/types"],
  "exclude": ["node_modules", "dist"]
}
